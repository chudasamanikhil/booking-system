<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (hit.length > 0) { %>
            <div class="grid">
                <% for (let hits of hit) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="product__title"><%= hits.hotelName %></h1>
                        </header>
                        <div class="card__image">
                            <img src="<%= hits.images %>"
                                alt="No Image Found">
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">Rs.<%= hits.rooms.roomPrice %> </h2>
                            <p class="product__description"><%= hits.description %></p>
                        </div>
                        <div class="card__actions">
                            <a href="/admin/edit-hotel/<%= hits.id %>" class="btn">Edit</a>
                            <form action="/admin/delete-hotel" method="post">
                                <input type="hidden" value="<%= hits._id %>" name="hotelId">
                              <button class="btn" type="submit">Delete</button>
                           </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('../includes/end.ejs') %>