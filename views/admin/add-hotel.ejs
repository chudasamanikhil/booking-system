<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <h2 class="center">Add a new Hotel</h2>
        <form class="product-form" action="/admin/add-hotel" method="POST">
            <div class="form-control">
                <label for="title">Hotel Name</label>
                <input type="text" name="hotelName" id="hotelName">
            </div>
            <div class="form-control">
                <label for="title">Hotel Address</label>
                <input type="text" name="hotelAddress" id="hotelAddress">
            </div>
            <div class="form-control">
                <label for="title">City</label>
                <input type="text" name="city" id="city">
            </div>
            <div class="form-control">
                <label for="title">Province</label>
                <input type="text" name="province" id="province">
            </div>
            <div class="form-control">
                <label for="title">Zip Code</label>
                <input type="text" name="zipCode" id="zipCode">
            </div>
            <div class="form-control">
                <label for="title">Stars</label>
                <input type="text" name="stars" id="stars">
            </div>
            <div class="form-control">
                <label for="title">Image</label>
                <input type="text" name="images" id="images">
            </div>
            <div class="form-control">
                <label for="title">Room Type</label>
                <input type="text" name="roomType" id="roomType">
            </div>
            <div class="form-control">
                <label for="imageUrl">Room Capacity</label>
                <input type="text" name="roomCapacity" id="roomCapacity">
            </div>
            <div class="form-control">
                <label for="price">Room Price</label>
                <input type="number" name="roomPrice" id="roomPrice">
            </div>
            <div class="form-control">
                <label for="price">Number Of Rooms</label>
                <input type="number" name="noOfRooms" id="noOfRooms">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" cols="" rows="10"></textarea>
            </div>

            <button class="btn" type="submit">Add Hotel</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>