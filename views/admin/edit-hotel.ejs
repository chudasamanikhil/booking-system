<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <h2 class="center">Add a new Hotel</h2>
        <form class="product-form" action="/admin/add-hotel" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" value="<%= hotel.title %>">
            </div>
            <div class="form-control">
                <label for="imageUrl">ImageUrl</label>
                <input type="text" name="imageUrl" id="imageUrl" value="<%= hotel.imageUrl %>">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" id="price" value="<%= hotel.price %>">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" cols="" rows="10" ><%= hotel.description %></textarea>
            </div>

            <button class="btn" type="submit">Update Hotel</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>