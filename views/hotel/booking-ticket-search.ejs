<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    <link rel="stylesheet" href="/css/search.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <%- include('../includes/navigation.ejs') %>
    <h2>
        check your booking status here
    </h2>
    <div class="wrap">
        <form action="/bookingstatus" method="POST">
            <div class="search">
                <input type="text" class="searchTerm" name="search" placeholder="Enter Your Unique booking Id...">
                <button type="submit" class="searchButton">
                  <i class="fa fa-search"></i>
               </button>
             </div>
        </form>
     </div>

     <% if(hotel === null) { %>
        <div>No booking found with specific ID...</div>
    <% } else { %>
     <div class="searchResult">
        <h4>Name:<%= hotel.firstName + " " +  hotel.lastName%></h4>
        <h4>Address:<%= hotel.address %></h4>
        <h4>Country:<%= hotel.country %></h4>
        <h4>HotelName:<%= hits.hotelName %></h4>
        <h4>Room Type:<%= hits.rooms.roomType %></h4>
        <h4>CheckInDate:<%= hotel.checkIn %></h4>
        <h4>CheckOutDate:<%= hotel.checkOut %></h4>
        <h4>Number Of Rooms:<%= hotel.noOfRoom %></h4>
        <h4>Price:<%= hits.rooms.roomPrice %></h4>
        <h4>Booking date:<%= hotel.bookingDate %></h4>
     </div>
     <% } %>
    <%- include('../includes/end.ejs') %>